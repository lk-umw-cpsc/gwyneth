create or replace table user (
    id int primary key,
    name varchar(64) not null,
    authorization tinyint default 1 not null,
    email varchar(256) unique not null,
    passwordHash varchar(64) not null,
    salt varchar(64) not null
);

create or replace table frenchNumber (
    base10 int primary key,
    french varchar(64)
);

create or replace table userKnowsNumber {
    userid int,
    base10 int,
    foreign key (userid) references user(id),
    foreign key (base10) references frenchNumber(base10),
    unique (userid, base10)
};